@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudThemeProvider Theme="@CustomThemes.PubQuizTheme" />

<MudLayout>
    <MudAppBar Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       OnClick="ToggleDrawer"
                       Edge="Edge.Start"
                       Color="Color.Inherit" />
        <MudText Typo="Typo.h6" Class="ml-2">PubQuiz</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               Variant="DrawerVariant.Responsive"
               Elevation="1"
               Class="mud-width-260">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="px-4 py-3">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}